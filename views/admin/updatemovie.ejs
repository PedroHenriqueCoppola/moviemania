<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Filmes</title>
        <link rel="stylesheet" href="/stylesheets/admin/updatemovie.css" />
    </head>
    <body>
        <div class="app">
            <div class="header">
                <img src="/images/logo.png" alt="logo">
                <h1>MovieMania</h1>
            </div>

            <div class="updateMovie">
                <h2>Editar filme</h2>
    
                <form action="/admin/updatemovie/<%= movieId %>" method="POST" enctype="multipart/form-data">
                    <div class="inputContainer">
                        <div class="nameInput">
                            <input type="text" required id="name" name="name" autocomplete="off" value="<%= movieTitle %>">
                            <label class="labelline" for="name">Nome</label>
                        </div>
                
                        <div class="descInput">
                            <input type="text" required id="desc" name="desc" autocomplete="off" value="<%= movieDesc %>">
                            <label class="labelline" for="desc">Descrição</label>
                        </div>
                
                        <div class="genderSelect">
                            <select name="gender" id="gender" required>
                                <option value="" disabled>Selecione um gênero</option>
                                <% allGenres.forEach(gender => { %>
                                    <option value="<%= gender.genderid %>" <%= gender.genderid === movieGenreId ? 'selected' : '' %>><%= gender.gendername %></option>
                                <% }) %>
                            </select>
                        </div>
                
                        <div class="imageInput">
                            <input type="file" id="image" name="image" autocomplete="off" accept="image/jpeg">
                            <label class="labelline" for="image">Capa do filme</label>
                        </div>
                
                        <div class="dateInput">
                            <input type="date" required id="date" name="date" autocomplete="off" value="<%= movieDate %>">
                            <label class="labelline" for="date">Data de lançamento</label>
                        </div>
                
                        <div class="durationInput">
                            <input type="text" id="duration" name="duration" required autocomplete="off" value="<%= movieDuration %>">
                            <label class="labelline" for="duration">Duração (HH:MM:SS)</label>
                        </div>
                
                        <div class="actionsButtons">
                            <button class="cancelButton" type="button" onclick="window.history.back()">Voltar</button>
                            <button class="submitButton" type="submit">Atualizar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <script src="/scripts/movie.js"></script>
    </body>
</html>
